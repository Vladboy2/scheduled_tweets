<% if flash[:notice] %>
    <div class = "alert alert-info mt-4" role = "alert">
        <!-- use .inspect for debugging-->
        <%= flash[:notice] %><!-- the %= means we want to print it out -->
    </div>
<%end%>

<% if flash[:alert] %>
    <div class = "alert alert-warning mt-4" role = "alert">
        <%= flash[:alert] %> <!-- used for things that failed-->
    </div>
<%end%>